<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <ImageView
        android:id="@+id/iv_welcome_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher_foreground"
        app:tint="@color/pal_primary"
        app:layout_constraintBottom_toTopOf="@+id/tv_welcome_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_welcome_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/welcome_title"
        android:gravity="center"
        android:textColor="@color/pal_text_primary"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_welcome_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_welcome_logo" />

    <TextView
        android:id="@+id/tv_welcome_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="@string/welcome_subtitle"
        android:gravity="center"
        android:textColor="@color/pal_text_secondary"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_welcome_features"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome_title" />

    <LinearLayout
        android:id="@+id/tv_welcome_features"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome_subtitle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:text="Track your weight and measurements"
            android:textColor="@color/pal_text_primary"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_launcher_foreground"
            app:drawableTint="@color/pal_primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:text="Visualize your progress with charts"
            android:textColor="@color/pal_text_primary"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_launcher_foreground"
            app:drawableTint="@color/pal_primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:text="Privacy-first (all data stays local)"
            android:textColor="@color/pal_text_primary"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_launcher_foreground"
            app:drawableTint="@color/pal_primary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>