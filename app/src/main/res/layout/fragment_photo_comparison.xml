<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Photo Comparison Layout -->
        <LinearLayout
            android:id="@+id/layout_comparison"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Progress Comparison"
                android:textColor="@color/pal_text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_progress_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Progress over X days"
                android:textColor="@color/pal_text_secondary"
                android:textSize="16sp"
                android:gravity="center"
                tools:text="Progress over 45 days" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <!-- Before Photo -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="Before"
                            android:textColor="@color/pal_text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@color/pal_surface" />

                        <ImageView
                            android:id="@+id/iv_before_photo"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:contentDescription="Before progress photo"
                            tools:src="@tools:sample/avatars" />

                        <TextView
                            android:id="@+id/tv_before_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:textColor="@color/pal_text_secondary"
                            android:textSize="12sp"
                            android:gravity="center"
                            tools:text="Jan 15, 2024" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- After Photo -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="After"
                            android:textColor="@color/pal_text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@color/pal_primary"
                            android:textColorHint="@android:color/white" />

                        <ImageView
                            android:id="@+id/iv_after_photo"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:contentDescription="After progress photo"
                            tools:src="@tools:sample/avatars" />

                        <TextView
                            android:id="@+id/tv_after_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:textColor="@color/pal_text_secondary"
                            android:textSize="12sp"
                            android:gravity="center"
                            tools:text="Mar 1, 2024" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Progress Summary -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Amazing Progress!"
                        android:textColor="@color/pal_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Keep up the great work! Your dedication is showing real results."
                        android:textColor="@color/pal_text_secondary"
                        android:textSize="14sp"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Single Photo Layout -->
        <LinearLayout
            android:id="@+id/layout_single_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_single_photo_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Progress Photo"
                android:textColor="@color/pal_text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_single_photo"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Progress photo"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/tv_single_photo_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:textColor="@color/pal_text_secondary"
                        android:textSize="14sp"
                        android:gravity="center"
                        tools:text="Jan 15, 2024" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_single_photo_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Take more photos to see your before/after comparison!"
                android:textColor="@color/pal_text_secondary"
                android:textSize="16sp"
                android:gravity="center" />

        </LinearLayout>

        <!-- No Photos Layout -->
        <LinearLayout
            android:id="@+id/layout_no_photos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_camera"
                android:contentDescription="Camera icon"
                app:tint="@color/pal_text_secondary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="No Progress Photos Yet"
                android:textColor="@color/pal_text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Start taking progress photos to track your visual transformation!"
                android:textColor="@color/pal_text_secondary"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginHorizontal="32dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Your First Photo"
                android:backgroundTint="@color/pal_primary"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_camera" />

        </LinearLayout>

        <!-- Error Layout -->
        <LinearLayout
            android:id="@+id/layout_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Oops!"
                android:textColor="@color/pal_error"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Something went wrong"
                android:textColor="@color/pal_text_secondary"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginHorizontal="32dp" />

        </LinearLayout>

    </FrameLayout>

</androidx.core.widget.NestedScrollView>