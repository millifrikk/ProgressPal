<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardBodyComposition"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="3dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:rippleColor="?attr/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Body Composition Icon -->
            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="@drawable/circle_background_light"
                android:backgroundTint="?attr/colorPrimaryContainer">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_fitness"
                    app:tint="?attr/colorOnPrimaryContainer" />

            </LinearLayout>

            <!-- Title and Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body Composition"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/tvLastUpdated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="2dp"
                    tools:text="Based on latest measurements" />

            </LinearLayout>

            <!-- Add Body Measurements Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddWaist"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_add"
                app:iconTint="?attr/colorPrimary"
                app:iconSize="20dp"
                android:contentDescription="Add body measurements (neck, waist, hip)"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Main Content Area -->
        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Assessment Display -->
            <LinearLayout
                android:id="@+id/layoutAssessment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- Overall Category -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overall:"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvOverallCategory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="sans-serif-medium"
                        tools:text="Athletic Build" />

                    <!-- Health Risk Indicator -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipHealthRisk"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipIcon="@drawable/ic_circle"
                        app:chipIconSize="8dp"
                        tools:text="Low Risk"
                        tools:chipIconTint="@color/green_500" />

                </LinearLayout>

                <!-- Metrics Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Metrics:"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Primary Metric (WHtR or BMI) -->
                    <LinearLayout
                        android:id="@+id/layoutPrimaryMetric"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="16dp"
                            android:layout_height="wrap_content"
                            android:text="•"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorPrimary"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvPrimaryMetric"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="8dp"
                            tools:text="WHtR: 0.46 ✓ Healthy" />

                        <ImageView
                            android:id="@+id/ivPrimaryMetricStatus"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_circle"
                            app:tint="@color/green_500"
                            tools:visibility="visible" />

                    </LinearLayout>

                    <!-- Secondary Metric (BRI) -->
                    <LinearLayout
                        android:id="@+id/layoutSecondaryMetric"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="16dp"
                            android:layout_height="wrap_content"
                            android:text="•"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvSecondaryMetric"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginStart="8dp"
                            tools:text="BRI: 3.2 ✓ Low Risk" />

                        <ImageView
                            android:id="@+id/ivSecondaryMetricStatus"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_circle"
                            app:tint="@color/green_500"
                            tools:visibility="visible" />

                    </LinearLayout>

                    <!-- BMI Reference -->
                    <LinearLayout
                        android:id="@+id/layoutBMIReference"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="16dp"
                            android:layout_height="wrap_content"
                            android:text="•"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvBMIReference"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginStart="8dp"
                            tools:text="BMI: 25.2 (Note: Athletic)" />

                        <TextView
                            android:id="@+id/tvBMINote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="italic"
                            android:visibility="gone"
                            tools:text="Enhanced"
                            tools:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Recommendation -->
                <TextView
                    android:id="@+id/tvRecommendation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="?attr/colorSurfaceVariant"
                    tools:text="Excellent athletic build. Continue training regimen." />

            </LinearLayout>

            <!-- Add Waist Measurement Prompt -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWaistPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="1dp"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_info"
                        app:tint="?attr/colorPrimary"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unlock Body Fat Analysis"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvWaistPromptMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:layout_marginTop="2dp"
                            tools:text="Add neck &amp; waist measurements for Navy Method body fat percentage" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddWaistMeasurement"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Measurements"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="12sp"
                        android:minWidth="48dp"
                        android:minHeight="32dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>