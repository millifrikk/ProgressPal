<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_container"
    android:layout_width="160dp"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Popular Badge -->
        <TextView
            android:id="@+id/tv_popular_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="Most Popular"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="@drawable/badge_milestone"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Savings Badge -->
        <TextView
            android:id="@+id/tv_savings_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Save 33%"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="@drawable/badge_progress"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_tier_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Monthly"
                android:textColor="@color/pal_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                tools:text="Annual" />

            <TextView
                android:id="@+id/tv_tier_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="$4.99"
                android:textColor="@color/pal_text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                tools:text="$39.99" />

            <TextView
                android:id="@+id/tv_billing_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="per month"
                android:textColor="@color/pal_text_secondary"
                android:textSize="12sp"
                android:gravity="center"
                tools:text="per year" />

            <TextView
                android:id="@+id/tv_monthly_equivalent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$3.33/month"
                android:textColor="@color/pal_success"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>