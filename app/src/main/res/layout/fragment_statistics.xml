<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:id="@+id/tv_welcome_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Your Progress Statistics"
                android:textColor="@color/pal_text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Time Range Filter -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_time_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_week"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Week" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_month"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Month" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_3months"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Months" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_year"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_all"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="All" />

            </com.google.android.material.chip.ChipGroup>

            <!-- Main Content -->
            <LinearLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Weight Statistics Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Weight Statistics"
                            android:textColor="@color/pal_text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Total Entries"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_total_entries"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/pal_text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Average Weight"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_average_weight"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0.0 kg"
                                    android:textColor="@color/pal_text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Total Loss"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_total_weight_loss"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0.0 kg"
                                    android:textColor="@color/pal_success"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Total Gain"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_total_weight_gain"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0.0 kg"
                                    android:textColor="@color/pal_error"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Weekly Change"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_weekly_change"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0.0 kg/week"
                                    android:textColor="@color/pal_text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Progress Statistics Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Progress Overview"
                            android:textColor="@color/pal_text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Start Weight"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_start_weight"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0.0 kg"
                                    android:textColor="@color/pal_text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Current Weight"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_current_weight_stats"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0.0 kg"
                                    android:textColor="@color/pal_text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Days Active"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_days_active"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0 days"
                                    android:textColor="@color/pal_text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/goal_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Goal Weight"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_goal_weight_stats"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0.0 kg"
                                    android:textColor="@color/pal_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Progress"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_progress_percentage"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0%"
                                    android:textColor="@color/pal_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/estimated_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Est. Days to Goal"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_estimated_days"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0 days"
                                    android:textColor="@color/pal_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Trend Analysis Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Trend Analysis"
                            android:textColor="@color/pal_text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Current Trend"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_current_trend"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Stable"
                                    android:textColor="@color/pal_text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Weekly Trend"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_weekly_trend"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Stable"
                                    android:textColor="@color/pal_text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Monthly Trend"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_monthly_trend"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Stable"
                                    android:textColor="@color/pal_text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Longest Streak"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_longest_streak"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0 days"
                                    android:textColor="@color/pal_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Current Streak"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_current_streak"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0 days"
                                    android:textColor="@color/pal_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- BMI Analysis Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="BMI Analysis"
                            android:textColor="@color/pal_text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Current BMI"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvCurrentBMI"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0.0"
                                    android:textColor="@color/pal_text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Category"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvBMICategory"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Normal"
                                    android:textColor="@color/pal_text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="BMI Change"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvBMIChange"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0.0"
                                    android:textColor="@color/pal_text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/targetBMISection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Target BMI"
                                    android:textColor="@color/pal_text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvTargetBMI"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0.0"
                                    android:textColor="@color/pal_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Weight Chart Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Weight Progress Chart"
                            android:textColor="@color/pal_text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.progresspal.app.presentation.dashboard.WeightChartView
                            android:id="@+id/weight_chart_stats"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_chart_empty_stats"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Add more weight entries to see your progress chart"
                            android:textColor="@color/pal_text_secondary"
                            android:textSize="12sp"
                            android:visibility="gone" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- BMI Chart Placeholder -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/bmi_chart_container"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="BMI Progress Chart"
                            android:textColor="@color/pal_text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="BMI chart visualization coming soon"
                            android:textColor="@color/pal_text_secondary"
                            android:textSize="14sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Export Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_export_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="100dp"
                    android:text="Export Data"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/pal_primary" />

            </LinearLayout>

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/layout_empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="📊"
                    android:textSize="48sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="No Statistics Available"
                    android:textColor="@color/pal_text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Start tracking your weight to unlock detailed analytics, progress charts, and personalized insights"
                    android:textColor="@color/pal_text_secondary"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>