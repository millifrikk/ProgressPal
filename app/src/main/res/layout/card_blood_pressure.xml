<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardBloodPressure"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="3dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:rippleColor="?attr/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Blood Pressure Icon -->
            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="@drawable/circle_background_light"
                android:backgroundTint="?attr/colorPrimaryContainer">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_blood_pressure"
                    app:tint="?attr/colorOnPrimaryContainer" />

            </LinearLayout>

            <!-- Title and Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Pressure"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/tvLastUpdated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="2dp"
                    tools:text="Last measured 2 hours ago" />

            </LinearLayout>

            <!-- Add/Menu Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddMeasurement"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_add"
                app:iconTint="?attr/colorPrimary"
                app:iconSize="20dp"
                android:contentDescription="Add blood pressure measurement" />

        </LinearLayout>

        <!-- Main Content Area -->
        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- No Data State -->
            <LinearLayout
                android:id="@+id/layoutNoData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_blood_pressure_outline"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No readings yet"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track your blood pressure to monitor your health"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGetStarted"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Started"
                    app:icon="@drawable/ic_add" />

            </LinearLayout>

            <!-- Has Data State -->
            <LinearLayout
                android:id="@+id/layoutHasData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                tools:visibility="gone">

                <!-- Blood Pressure Reading Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Main Reading -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Systolic -->
                        <TextView
                            android:id="@+id/tvSystolic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceHeadlineLarge"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="sans-serif-medium"
                            tools:text="120" />

                        <!-- Separator -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textAppearance="?attr/textAppearanceHeadlineMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginHorizontal="4dp" />

                        <!-- Diastolic -->
                        <TextView
                            android:id="@+id/tvDiastolic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceHeadlineLarge"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="sans-serif-medium"
                            tools:text="80" />

                        <!-- Unit -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mmHg"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Pulse Section -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_favorite"
                                app:tint="?attr/colorError"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/tvPulse"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface"
                                android:fontFamily="sans-serif-medium"
                                tools:text="72" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="bpm"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Category Chip -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCategory"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:chipIcon="@drawable/ic_circle"
                        app:chipIconSize="8dp"
                        tools:text="Optimal"
                        tools:chipIconTint="@color/green_500" />

                    <TextView
                        android:id="@+id/tvTimeOfDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:drawablePadding="4dp"
                        app:drawableStartCompat="@drawable/ic_schedule"
                        app:drawableTint="?attr/colorOnSurfaceVariant"
                        tools:text="Morning" />

                    <!-- Guidelines Indicator -->
                    <TextView
                        android:id="@+id/tvGuidelines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:drawablePadding="4dp"
                        app:drawableStartCompat="@drawable/ic_medical"
                        app:drawableTint="?attr/colorOnSurfaceVariant"
                        android:visibility="gone"
                        tools:text="EU (ESC)"
                        tools:visibility="visible" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <!-- Trend Indicator -->
                    <TextView
                        android:id="@+id/tvTrend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:drawablePadding="4dp"
                        android:visibility="gone"
                        tools:text="↗ Trending up"
                        tools:visibility="visible" />

                </LinearLayout>

                <!-- Quick Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewHistory"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View History"
                        android:textColor="?attr/colorPrimary"
                        app:icon="@drawable/ic_history"
                        app:iconTint="?attr/colorPrimary" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewTrends"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trends"
                        android:textColor="?attr/colorPrimary"
                        app:icon="@drawable/ic_trending_up"
                        app:iconTint="?attr/colorPrimary" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Warning/Alert Section (for high BP) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/colorErrorContainer"
            app:strokeColor="?attr/colorError"
            app:strokeWidth="1dp"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_warning"
                    app:tint="?attr/colorError"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvAlertMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnErrorContainer"
                    tools:text="High reading detected. Consider consulting your healthcare provider." />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>