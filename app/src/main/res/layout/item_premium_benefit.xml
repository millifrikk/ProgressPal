    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_benefit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textColor="@color/pal_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Advanced Analytics" />

        <TextView
            android:id="@+id/tv_benefit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pal_text_secondary"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            tools:text="Detailed progress patterns and plateau analysis" />

    </LinearLayout>

